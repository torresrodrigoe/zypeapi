<div class="container">
  <h1>Zype Videos test</h1>

  <div class="videos-list row">
    <% @videos['response'].each do |video| %>

    <div class="video-container col-sm-4" data-video="<%= video['_id'] %>">
      <a href="/videos/<%= video['_id'] %>">
        <div class="video-thumb" style="background-image:url('<%= video['thumbnails'][2]['url'] %>')">
        </div>
      </a>
      <div class="video-bottom">
        <a href="/videos/<%= video['_id'] %>">
          <h6 class="video-title"><%= video['title'] %></h6>
        </a>
      </div>
    </div>
    <% end %>
  </div>
  <div class="paginator">
    <% if @page > 1 %>
      <a href="/videos?page=<%= @page+1 %>" class="btn btn-primary">Back</a>
    <% end %>
    <a href="/videos?page=<%= @page+1 %>" class="btn btn-primary">Next</a>
  </div>
</div>
